@model FazendaUniao.Models.Insumo

@{
    ViewData["Title"] = "Criar Insumo";
}

<div id="tabela-input" class="container custom-container my-4">
    <h1 class="text-center mb-4">Cadastrar Insumo</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Fornecedor -->
                <div id="input-tabela" class="form-group">
                    <label asp-for="FornecedorId" class="control-label">Fornecedor</label>
                    <select name="FornecedorId" class="form-control" required>
                        <option value="">Selecione um Fornecedor</option>
                        @foreach (var fornecedor in ViewBag.Fornecedores)
                        {
                            <option value="@fornecedor.FornecedorId">@fornecedor.Nome</option>
                        }
                    </select>
                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                </div>

                <!-- Nome -->
                <div id="input-tabela" class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <!-- Descrição -->
                <div id="input-tabela" class="form-group">
                    <label asp-for="Descricao" class="control-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <!-- Quantidade -->
                <div id="input-tabela" class="form-group">
                    <label asp-for="Quantidade" class="control-label">Quantidade</label>
                    <input asp-for="Quantidade" class="form-control" placeholder="Quantidade em Gramas(g)" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>

                <!-- Modal de Confirmação -->
                <div id="confirmModal" class="modal">
                    <div class="modal-content">
                        <p id="confirmMessage">Deseja realmente salvar o insumo?</p>
                        <button id="botaoConfimacao" class="btn btn-success" onclick="confirmAction()">Confirmar</button>
                        <button id="botaoConfimacao" type="button" onclick="closeModal()" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>

                <!-- Botões de Ação -->
                <div id="botao-cadastro" class="form-group">
                    <input type="button" value="Salvar" class="btn btn-success" onclick="validateAndShowModal()" />
                    <a class="btn btn-light" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
