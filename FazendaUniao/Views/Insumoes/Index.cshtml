@model IEnumerable<FazendaUniao.Models.Insumo>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center" id="tabela-insumos">
    <br />
    <div class="tituloH1">
        <h1>Consultar Insumos</h1>
    </div>
    <br />
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                        <td>
                                <a id="botoes" asp-action="Edit" class="btn btn-primary" asp-route-id="@item.InsumoId">Editar</a> |
                                <a id="botoes" asp-action="Details" class="btn btn-info" asp-route-id="@item.InsumoId">Detalhes</a> |
                                <a id="botoes" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.InsumoId">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a id="botaoInsumos" class="btn btn-success" asp-action="Create">Cadastrar Insumo</a>
    </div>
</div>
