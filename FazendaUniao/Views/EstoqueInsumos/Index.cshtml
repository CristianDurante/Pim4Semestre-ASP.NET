@model IEnumerable<FazendaUniao.Models.EstoqueInsumos>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center" id="tabela-estoque-insumos">
    <br />
    <div class="tituloH1">
        <h1>Consultar Estoque de Insumos</h1>
    </div>
    <br />
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.QuantidadeEmEstoque)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuantidadeEmEstoque)
                        </td>
                        <td>
                                <a id="botoes" asp-action="Edit" class="btn btn-primary" asp-route-id="@item.EstoqueInsumosId">Editar</a> |
                                <a id="botoes" asp-action="Details" class="btn btn-info" asp-route-id="@item.EstoqueInsumosId">Detalhes</a> |
                                <a id="botoes" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.EstoqueInsumosId">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a id="botaoEstoqueInsumos" class="btn btn-success" asp-action="Create">Cadastrar Novo Insumo</a>
    </div>
</div>
