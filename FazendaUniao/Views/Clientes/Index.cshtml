@model IEnumerable<FazendaUniao.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center" id="tabela-cliente">
    <br />
    <div class="tituloH1">
        <h1>Consultar Clientes</h1>
    </div>
    <br />
    <div id="tabela-meio" class="table-wrapper">
 
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeCliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnderecoCliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TelefoneCliente)
                    </th>
                    <th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnderecoCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TelefoneCliente)
                        </td>
                        <td>
                            <a id="botoes" asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ClienteId">Editar</a> |
                            <a id="botoes" asp-action="Details" class="btn btn-info" asp-route-id="@item.ClienteId">Detalhes</a> |
                            <a id="botoes" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ClienteId">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
      
    </div>
    
    <br />
    <div>
            <a id="botaoCliente" class="btn btn-success" asp-action="Create">Cadastrar Cliente</a>
    </div>
</div>
