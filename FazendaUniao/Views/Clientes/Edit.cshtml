@model FazendaUniao.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<div id="tabela-input" class="container custom-container">
    <h1>Editar Clientes</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ClienteId" />

                <div class="form-group">
                    <label asp-for="NomeCliente" class="control-label">Nome do Cliente</label>
                    <input asp-for="NomeCliente" class="form-control" />
                    <span asp-validation-for="NomeCliente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CnpjCliente, "CNPJ do Cliente")
                    @Html.TextBoxFor(model => model.CnpjCliente, new { @class = "form-control", @id = "cnpj" })
                    @Html.ValidationMessageFor(model => model.CnpjCliente, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label asp-for="EnderecoCliente" class="control-label">Endereço do Cliente</label>
                    <input asp-for="EnderecoCliente" class="form-control" />
                    <span asp-validation-for="EnderecoCliente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TelefoneCliente, "Telefone do Cliente")
                    @Html.TextBoxFor(model => model.TelefoneCliente, new { @class = "form-control", @id = "telefone" })
                    @Html.ValidationMessageFor(model => model.TelefoneCliente, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label asp-for="EmailCliente" class="control-label">E-mail do Cliente</label>
                    <input asp-for="EmailCliente" class="form-control" />
                    <span asp-validation-for="EmailCliente" class="text-danger"></span>
                </div>

                <div id="confirmModal" class="modal">
                    <div class="modal-content">
                        <p id="confirmMessage">Deseja realmente salvar as alterações?</p>
                        <button id="botaoConfimacao" onclick="confirmEdit()" class="btn btn-success">Confirmar</button>
                        <button id="botaoConfimacao" type="button" onclick="closeModal()" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>

                <div id="botao-cadastro" class="form-group">
                    <div>
                        <input onclick="validateAndShowModal()" type="button" value="Salvar" class="btn btn-success" />
                    </div>
                    <div>
                        <a class="btn btn-light" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


