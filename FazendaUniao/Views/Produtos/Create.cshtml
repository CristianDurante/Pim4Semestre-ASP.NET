@model FazendaUniao.Models.Produtos

@{
    ViewData["Title"] = "Create";
}

<div id="tabela-input" class="container custom-container">
    <h1>Cadastrar Produtos</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div id="input-tabela" class="form-group">
                    <label asp-for="Nome" class="control-label">Nome do Produto</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Categoria" class="control-label">Categoria</label>
                    <input asp-for="Categoria" class="form-control" />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PrecoUnitario" class="control-label">Preço Unitário</label>
                    <input asp-for="PrecoUnitario" class="form-control" id="PrecoUnitario" />
                    <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
                </div>

                <div id="confirmModal" class="modal">
                    <div class="modal-content">
                        <p id="confirmMessage">Deseja realmente cadastrar este produto?</p>
                        <button id="botaoConfimacao" class="btn btn-success" onclick="confirmAction()">Confirmar</button>
                        <button id="botaoConfimacao" type="button" id="botaoConfimacao" onclick="closeModal()" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>

                <div id="botao-cadastro" class="form-group">
                    <input type="button" value="Cadastrar" class="btn btn-success" onclick="validateAndShowModal()" />
                    <a class="btn btn-light" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
