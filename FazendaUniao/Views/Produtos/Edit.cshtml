@model FazendaUniao.Models.Produtos

@{
    ViewData["Title"] = "Edit";
}

<div id="tabela-input" class="container custom-container">
    <h1>Editar Produtos</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProdutoId" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" readonly />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Categoria" class="control-label">Categoria</label>
                    <input asp-for="Categoria" class="form-control" />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PrecoUnitario" class="control-label">Preço Unitário</label>
                    <input asp-for="PrecoUnitario" class="form-control" step="0.01" />
                    <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
                </div>

                <div id="confirmModal" class="modal">
                    <div class="modal-content">
                        <p id="confirmMessage">Deseja realmente salvar as alterações?</p>
                        <button id="botaoConfimacao" onclick="confirmEdit()" class="btn btn-success">Confirmar</button>
                        <button id="botaoConfimacao" type="button" onclick="closeModal()" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>

                <div id="botao-cadastro" class="form-group">
                    <div>
                        <input type="button" value="Salvar" onclick="showEditConfirmation()" class="btn btn-success" />
                    </div>
                    <div>
                        <a class="btn btn-light" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>