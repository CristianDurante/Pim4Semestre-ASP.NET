@model FazendaUniao.Models.Produtos

@{
    ViewData["Title"] = "Details";
}

<div id="tabela-detalhes" class="container custom-container">
    <h1>Detalhes do Produto</h1>

    <dl id="detalhes-produto" class="row">
        <div class="detalhe-item">
            <dt class="detalhe-label col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="detalhe-valor col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>
        </div>
        <div class="detalhe-item">
            <dt class="detalhe-label col-sm-2">@Html.DisplayNameFor(model => model.Categoria)</dt>
            <dd class="detalhe-valor col-sm-10">@Html.DisplayFor(model => model.Categoria)</dd>
        </div>
        <div class="detalhe-item">
            <dt class="detalhe-label col-sm-2">@Html.DisplayNameFor(model => model.PrecoUnitario)</dt>
            <dd class="detalhe-valor col-sm-10">@Html.DisplayFor(model => model.PrecoUnitario)</dd>
        </div>
    </dl>

    <div id="botoes-acoes" class="form-group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ProdutoId">Editar</a>
        <a class="btn btn-light" asp-action="Index">Voltar à Lista</a>
    </div>
</div>