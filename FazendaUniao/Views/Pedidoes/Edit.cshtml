@model FazendaUniao.Models.Pedido

@{
    ViewData["Title"] = "Edit";
}

<div id="tabela-input" class="container custom-container">
    <h1>Editar Pedido</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PedidoId" />

                <div class="form-group">
                    <label asp-for="DataPedido" class="control-label">Data do Pedido</label>
                    <input asp-for="DataPedido" class="form-control" readonly/>
                    <span asp-validation-for="DataPedido" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Quantidade" class="control-label">Quantidade</label>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="control-label">Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="Pendente">Pendente</option>
                        <option value="Concluído">Concluído</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div id="confirmModal" class="modal">
                    <div class="modal-content">
                        <p id="confirmMessage">Deseja realmente salvar as alterações?</p>
                        <button id="botaoConfimacao" onclick="confirmEdit()" class="btn btn-success">Confirmar</button>
                        <button id="botaoConfimacao" type="button" onclick="closeModal()" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>

                <div id="botao-cadastro" class="form-group">
                    <div>
                        <button type="button" onclick="showEditConfirmation()" class="btn btn-success">Salvar</button>
                    </div>
                    <div>
                        <a class="btn btn-light" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>