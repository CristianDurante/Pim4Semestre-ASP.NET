@model FazendaUniao.Models.Pedido

@{
    ViewData["Title"] = "Criar Pedido";
}

<div id="tabela-input" class="container custom-container my-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Cliente -->
                <div id="input-tabela" class="form-group">
                    <label asp-for="ClienteId" class="control-label">Cliente</label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>

                <!-- Produto -->
                <div class="form-group">
                    <label asp-for="ProdutoId" class="control-label">Produto</label>
                    <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId" id="produtoSelect"></select>
                    <span asp-validation-for="ProdutoId" class="text-danger"></span>
                </div>

                <!-- Data do Pedido -->
                <div class="form-group">
                    <label asp-for="DataPedido" class="control-label">Data do Pedido</label>
                    <input asp-for="DataPedido" class="form-control" type="date" readonly value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DataPedido" class="text-danger"></span>
                </div>

                <!-- Quantidade -->
                <div class="form-group">
                    <label asp-for="Quantidade" class="control-label">Quantidade</label>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>

                <!-- Status -->
                <div class="form-group">
                    <label asp-for="Status" class="control-label">Status</label>
                    <select asp-for="Status" class="form-control" required>
                        <option value="Pendente">Concluído</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Modal de Confirmação -->
                <div id="confirmModal" class="modal">
                    <div class="modal-content">
                        <p id="confirmMessage">Deseja realmente confirmar este pedido?</p>
                        <button id="botaoConfimacao" class="btn btn-success">Confirmar</button>
                        <button id="botaoConfimacao" type="button" onclick="closeModal()" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>

                <!-- Botões de Ação -->
                <div id="botao-cadastro" class="form-group">
                    <input type="button" value="Confirmar Pedido" class="btn btn-success" onclick="validateAndShowModal()" />
                    <a asp-action="Index" class="btn btn-light">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>