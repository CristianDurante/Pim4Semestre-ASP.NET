@model FazendaUniao.Models.Plantacao

@{
    ViewData["Title"] = "Edit";
}

<div id="tabela-input" class="container custom-container">
    <h1>Editar Plantação</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PlantacaoId" />

                <div class="form-group">
                    <label asp-for="InsumoId" class="control-label">Nome Insumo</label>
                    <select asp-for="InsumoId" class="form-control" asp-items="ViewBag.InsumoId"></select>
                    <span asp-validation-for="InsumoId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TipoPlanta" class="control-label">Tipo da Planta</label>
                    <input asp-for="TipoPlanta" class="form-control" />
                    <span asp-validation-for="TipoPlanta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataPlantio" class="control-label">Data de Plantio</label>
                    <input asp-for="DataPlantio" class="form-control" readonly />
                    <span asp-validation-for="DataPlantio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataColheita" class="control-label">Data de Colheita</label>
                    <input asp-for="DataColheita" class="form-control" />
                    <span asp-validation-for="DataColheita" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="QuantidadePlantio" class="control-label">Quantidade de Plantio</label>
                    <input asp-for="QuantidadePlantio" class="form-control" />
                    <span asp-validation-for="QuantidadePlantio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="control-label">Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="Pendente">Pendente</option>
                        <option value="Concluído">Concluído</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div id="confirmModal" class="modal">
                    <div class="modal-content">
                        <p id="confirmMessage">Deseja realmente salvar as alterações?</p>
                        <button id="botaoConfimacao" onclick="confirmEdit()" class="btn btn-success">Confirmar</button>
                        <button id="botaoConfimacao" type="button" onclick="closeModal()" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>

                <div id="botao-cadastro" class="form-group">
                    <div>
                        <button type="button" onclick="showEditConfirmation()" class="btn btn-success">Salvar</button>
                    </div>
                    <div>
                        <a class="btn btn-light" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>