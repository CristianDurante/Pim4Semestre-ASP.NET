@model FazendaUniao.Models.Plantacao

@{
    ViewData["Title"] = "Create";
}

<div id="tabela-input-plantacao" class="container custom-container">
    <h1>Criar Plantação</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div id="input-tabela" class="form-group">
                    <label asp-for="InsumoId" class="control-label">Insumo</label>
                    <select asp-for="InsumoId" class="form-control" required>
                        <option value="">Selecione um Insumo</option>
                        @foreach (var insumo in ViewBag.Insumos)
                        {
                            <option value="@insumo.InsumoId">@insumo.Nome</option>
                        }
                    </select>
                    <span asp-validation-for="InsumoId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TipoPlanta" class="control-label">Tipo de Planta</label>
                    <input asp-for="TipoPlanta" class="form-control" />
                    <span asp-validation-for="TipoPlanta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataPlantio" class="control-label">Data de Plantio</label>
                    <input asp-for="DataPlantio" class="form-control" type="date" readonly value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DataPlantio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataColheita" class="control-label">Data de Colheita</label>
                    <input asp-for="DataColheita" class="form-control"
                           min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DataColheita" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="QuantidadePlantio" class="control-label">Quantidade para Plantio</label>
                    <input asp-for="QuantidadePlantio" class="form-control" />
                    <span asp-validation-for="QuantidadePlantio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="control-label">Status</label>
                    <select asp-for="Status" class="form-control" required>
                        <option value="Pendente">Pendente</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div id="confirmModal" class="modal">
                    <div class="modal-content">
                        <p id="confirmMessage">Deseja realmente cadastrar esta plantação?</p>
                        <button id="botaoConfimacao" onclick="confirmAction()" class="btn btn-success">Confirmar</button>
                        <button id="botaoConfimacao" type="button" onclick="closeModal()" id="botaoConfimacao" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>

                <div id="botao-cadastro" class="form-group">
                    <input type="button" value="Cadastrar" class="btn btn-success" onclick="validateAndShowModal()" />
                    <a class="btn btn-light" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
